<h1>Listing books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>Rating</th>
      <th>Isbn</th>
      <th>Approved</th>
      <th>Active</th>
      <th>Following</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.cover %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.rating %></td>
        <td><%= book.isbn %></td>
        <td><%= book.approved %></td>
        <td><%= book.active %></td>
        <td><%= book.following %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books %>
<br>

<%= link_to 'New Book', new_book_path %>
